{
  "name": "react-from-svg",
  "description": "Transform SVG files into React components, Native and/or Web, JavaScript and ReasonML. Without shitload of dependencies.",
  "version": "4.0.3",
  "license": "MIT",
  "repository": "https://github.com/MoOx/react-from-svg",
  "keywords": [
    "react",
    "react-native",
    "reason-react",
    "bs-react",
    "svg",
    "react-native-svg",
    "react-native-web",
    "bucklescript",
    "react-native",
    "svg-to-react",
    "svgr"
  ],
  "bin": {
    "react-from-svg": "./bin.js"
  },
  "files": [
    "*",
    "!.github",
    "!.DS_Store",
    "!**/*.bs.js",
    "!.merlin",
    "!lib/bs",
    "!lib/ocaml"
  ],
  "scripts": {
    "re:clean": "bsb -clean-world",
    "re:build": "bsb -make-world",
    "tests:jest": "jest",
    "tests:reason": "./bin.js __tests__/__fixtures__ __tests__/__fixtures__/components --with-native-for-reason",
    "posttests:reason": "find __tests__/__fixtures__/components -name \"*.re\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "tests": "yarn tests:jest && yarn tests:reason",
    "test": "yarn prerelease && yarn tests",
    "prerelease": "yarn re:clean && yarn re:build && webpack",
    "release": "npmpub"
  },
  "dependencies": {
    "camelcase": "^6.0.0",
    "glob": "^7.1.3",
    "meow": "^6.1.0",
    "mkdirp": "^0.5.1"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.5.1",
    "bs-platform": "^7.2.2",
    "husky": "^4.2.0",
    "jest": "^25.3.0",
    "lint-staged": "^10.0.2",
    "npmpub": "^5.0.0",
    "prettier": "^1.19.1",
    "reason-future": "^2.4.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "prettier": {
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/__fixtures__"
    ]
  }
}
