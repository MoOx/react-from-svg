{
  "name": "react-from-svg",
  "version": "3.1.0",
  "license": "MIT",
  "repository": "https://github.com/MoOx/react-from-svg",
  "keywords": [
    "react",
    "react-native",
    "reason-react",
    "bs-react",
    "svg",
    "react-native-svg",
    "react-native-web",
    "bucklescript",
    "react-native",
    "svg-to-react",
    "svgr"
  ],
  "bin": {
    "react-from-svg": "./bin.js"
  },
  "files": [
    "src",
    "!test",
    "bin.js",
    "bsconfig.json"
  ],
  "scripts": {
    "postinstall": "bsb -clean-world -make-world",
    "re:clean": "bsb -clean-world",
    "re:build": "bsb -make-world",
    "svg:format": "find test/components -name \"*.re\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "test": "yarn re:clean && yarn re:build && jest \"__tests__/(.*).proxy.js\"",
    "release": "npmpub"
  },
  "dependencies": {
    "bs-platform": "^7.2.2",
    "glob": "^7.1.3",
    "mkdirp": "^0.5.1",
    "reason-future": "^2.4.0",
    "reason-react": "^0.7.0"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.5.1",
    "husky": "^4.2.0",
    "jest": "^25.3.0",
    "lint-staged": "^10.0.2",
    "npmpub": "^5.0.0",
    "prettier": "^1.19.1",
    "trash-cli": "^1.4.0"
  },
  "prettier": {
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.{md,json,js,css}": [
      "prettier --write",
      "git add"
    ],
    "*.{re,rei}": [
      "bsrefmt --in-place",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
